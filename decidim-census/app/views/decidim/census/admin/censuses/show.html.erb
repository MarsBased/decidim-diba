<%= render 'invalid_rows' if @invalid_rows.present? %>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.show.title', scope: 'decidim.census') %>
    </h2>
  </div>
  <div class="card-section">
    <% if @status.count > 0 %>
      <p><%= t('decidim.census.admin.show.data', count: @status.count,
        due_date: l(@status.last_import_at, format: :long)) %>
      </p>
      <%= link_to t('decidim.census.admin.destroy.title'),
        censuses_path,
        method: :delete,
        class: 'button alert',
        data: { confirm: t('decidim.census.admin.destroy.confirm') } %>
      <% else %>
        <p><%= t('admin.show.empty', scope: 'decidim.census') %></p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.new.title', scope: 'decidim.census') %>
    </h2>
  </div>
  <div class="card-section">
    <p><%= t('decidim.census.admin.new.info') %></p>
    <%= form_tag censuses_path, multipart: true, class: 'form' do %>
      <%= label_tag :name, t('admin.new.file', scope: 'decidim.census') %>
      <%= file_field_tag :file %>
      <%= submit_tag t('admin.new.submit', scope: 'decidim.census'), class: 'button' %>
    <% end %>
  </div>
</div>
